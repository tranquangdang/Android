<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wattpadclone.Libary.Main.CurrentReadFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDFDFA"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="172dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Có sẵn"
                    android:textColor="#131313"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="93dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:text="5 of 25 stories"
                    android:textColor="#605F5F" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="947dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/gr_current_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:padding="@dimen/dp19" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                    <TextView
                        android:layout_width="126dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="0dp"
                        android:text="Truyện trả phí"
                        android:textColor="#0B0B0B"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="220sp"
                        android:layout_marginEnd="31dp"
                        android:layout_marginRight="31dp"
                        android:layout_marginBottom="8dp"
                        android:text="3 stories"
                        android:textColor="#605F5F" />
                </RelativeLayout>
                <GridView
                    android:id="@+id/gr_current_off_2"
                    android:layout_width="match_parent"
                    android:layout_height="494dp"
                    android:numColumns="3"
                    android:padding="@dimen/dp15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
