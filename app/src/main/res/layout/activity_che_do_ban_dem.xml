<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Home.Account.Thietlap.che_do_ban_dem">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_thiet_lap_dk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#f5f5f5"
            app:title="Chế độ ban đêm "
            app:titleMarginStart="25dp">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtMo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mở"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <View
            android:id="@+id/viewMo"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtXoay"
            android:background="#dfdfdf" />
        <TextView
            android:id="@+id/txtTat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tắt"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <View
            android:id="@+id/viewTat"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtTat"
            android:background="#dfdfdf" />
        


    </LinearLayout>


</LinearLayout>