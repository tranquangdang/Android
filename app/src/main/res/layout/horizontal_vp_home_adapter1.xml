<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/horizontal_rv_home_adapter1_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVieww"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="135dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_title1"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:id="@+id/home_content1"
                    android:text="Content"
                    android:textSize="12sp"
                    android:textColor="#808080"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_tag1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/home_tag_rounded"
                    android:text="Taggggggggggg"
                    android:textSize="12sp"
                    android:textColor="#808080"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/home_cover1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"
        android:src="@mipmap/testimg"
        app:riv_corner_radius="5dp"/>

</RelativeLayout>