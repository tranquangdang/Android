<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Write.NewBookActivity"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_new_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            app:titleTextColor="@color/black"
            app:title="Thêm truyện mới"
            app:titleMarginStart="15dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="15dp"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/write_img"
                android:scaleType="fitXY"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:src="@mipmap/grey_test"/>

            <TextView
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Bìa truyện"/>
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Tiêu Đề Truyện"/>

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/write_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="Tiêu Đề Mặc Định"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Mô Tả Truyện"/>

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/write_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="Nhấp vào đây để viết một mô tả"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Thể loại Truyện"/>

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/write_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="Chọn thể loại"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_create_new_book"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btncong"
            android:text="Đăng truyện mới"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
</LinearLayout>