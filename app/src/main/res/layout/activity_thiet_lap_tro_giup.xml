<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Account.Thietlap.thiet_lap_tro_giup">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_thiet_lap_chung"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#f5f5f5"
            app:title="Trợ giúp và hỗ trợ "
            app:titleMarginStart="25dp">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn cần giúp đỡ về vấn đề gì ?"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trung tâm trợ giúp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy vào trang trung tâm hỗ trợ của chúng tôi để đọc những bài viết về cách sử dụng wattpad,hoặc kiểm tra trang những vấn đề thường gặp của chúng tôi để biết những loại lỗi mà chúng tôi đang cố khắc phục"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi một vé hỗ trợ"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đang gặp một vấn đề mà chưa được nhắc đến ở trung tâm hỗ trợ? hãy liên hệ với đội ngũ hỗ trợ của chúng tôi"/>
        <CheckedTextView
            android:id="@+id/checkviewHoTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:text="Lắc để được hỗ trợ"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đến trung tâm trợ giúp bất cứ lúc nào trong ứng dụng" />
    </LinearLayout>



</LinearLayout>